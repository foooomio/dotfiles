# vim: ft=bash

# Homebrew
eval "$(/opt/homebrew/bin/brew shellenv)"
PREFIX="$(brew --prefix)"

# PATH
PATH="$HOME/.local/bin:$PATH"
PATH="$PREFIX/opt/ruby/bin:$PATH"
PATH="$PREFIX/opt/openssl/bin:$PATH"
PATH="$PREFIX/opt/curl/bin:$PATH"
PATH="$PREFIX/opt/coreutils/libexec/gnubin:$PATH"
PATH="$PREFIX/opt/gnu-sed/libexec/gnubin:$PATH"
PATH="/Applications/MacVim.app/Contents/bin:$PATH"
PATH="$(ruby -e 'print Gem.dir')/bin:$PATH"
PATH="$(yarn global bin):$PATH"

# Bash completion
if [[ -r "$PREFIX/etc/profile.d/bash_completion.sh" ]]; then
  . "$PREFIX/etc/profile.d/bash_completion.sh"
fi

# Node
export N_PREFIX="$HOME/.local"

# Deno
export DENO_INSTALL="$HOME/.deno"
export PATH="$DENO_INSTALL/bin:$PATH"
